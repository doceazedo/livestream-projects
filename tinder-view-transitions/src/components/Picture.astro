---
interface Props {
	expanded?: boolean;
}

const { expanded } = Astro.props;
---

<figure
  class="picture"
  class:list={[{ expanded }]}
  transition:name="avatar"
  transition:animate="initial"
>
  <slot />
</figure>

<style>
  .picture {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    width: 100%;
    aspect-ratio: 1 / 1;
    background-image: url('/profile-picture.jpg');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
    overflow: hidden;

    &.expanded {
      aspect-ratio: unset;
      height: 100%;
      border-radius: 1rem;
    }
  }
</style>